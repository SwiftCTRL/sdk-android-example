<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">


    <TextView
        android:id="@+id/fragment_test_type"
        android:layout_width="wrap_content"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="SwiftCtrlClient" />



    <TextView
        android:id="@+id/fragment_test_userid"
        android:layout_width="wrap_content"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="userId=37" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_test_connect"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_connected"
        app:iconGravity="textStart"
        android:enabled="false"
        tools:enabled="true"
        app:iconSize="40dp"
        app:iconTint="#ff0000"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/fragment_test_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_test_type"
        tools:text="Connecting..." />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/fragment_test_register"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textOff=""
        android:enabled="false"
        tools:enabled="true"
        android:textOn=""
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_test_connect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_test_connect" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragment_test_qr_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:drawableEnd="@drawable/ic_thumb_up"
        tools:text="@string/qr_valid"
        android:padding="@dimen/spacing_medium"
        android:drawablePadding="@dimen/spacing_medium"
        android:drawableTint="@android:color/holo_green_dark"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_test_connect" />

    <ImageView
        android:id="@+id/fragment_test_qr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_test_qr_valid"
        app:layout_constraintWidth_percent="0.4"
        tools:background="@color/colorAccent" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/fragment_test_autoscroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@id/fragment_test_qr"
        app:layout_constraintBottom_toTopOf="@+id/fragment_test_scroll"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/auto_scroll"/>
    <ScrollView
        android:id="@+id/fragment_test_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_test_autoscroll">


        <LinearLayout
            android:id="@+id/fragment_test_log_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>